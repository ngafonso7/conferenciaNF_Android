<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    tools:context=".ConferenciaNF">

    <TextView
	       android:id="@+id/textView1"
	       android:text="CNPJ/CPF"
	       android:layout_width="100dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="10dp"
	       android:textSize="20sp"/>
	
	   <EditText
	       android:id="@+id/txtCNPJ"
	       android:layout_width="250dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="5dp"
	       android:ems="10"
	       android:textSize="20sp"
	       android:hint=" CNPJ"
	       android:inputType="numberDecimal"
	       android:background="@layout/border"
	       android:lines="1"
	       android:singleLine="true"
	       android:selectAllOnFocus="true"/>
	       
	   <TextView
	       android:id="@+id/textView2"
	       android:text="Fornecedor"
	       android:layout_width="105dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="5dp"
	       android:textSize="20sp"/>
	
	   <EditText
	       android:id="@+id/txtFornecedor"
	       android:hint=" Fornecedor"
	       android:layout_width="530dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="5dp"
	       android:background="@layout/border"
	       android:textSize="20sp"/>
	
	   <TextView
	       android:id="@+id/textView3"
	       android:text="Numero NF"
	       android:layout_width="105dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="-1005dp"
	       android:textSize="20sp"/>
	   <EditText
	       android:id="@+id/txtNumNF"
	       android:hint=" Numero NF"
	       android:layout_width="150dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="5dp"
	       android:background="@layout/border"
	       android:inputType="numberDecimal"
	       android:lines="1"
	       android:singleLine="true"
	       android:textSize="20sp"/>
	   <TextView
	       android:id="@+id/textView4"
	       android:text="Modelo"
	       android:layout_width="80dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="10dp"
	       android:textSize="20sp"/>
	   <Spinner
	       android:id="@+id/txtModeloNF"
	       android:layout_width="60dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="5dp"
	       android:background="@layout/border"
	       android:textSize="20sp"
	       android:spinnerMode="dialog"
	       />
	   <TextView
	       android:id="@+id/textView5"
	       android:text="Série"
	       android:layout_width="60dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="10dp"
	       android:textSize="20sp"/>
	   <EditText
	       android:id="@+id/txtSerieNF"
	       android:layout_width="60dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="10dp"
	       android:background="@layout/border"
	       android:inputType="numberDecimal"
	       android:lines="1"
	       android:singleLine="true"
	       android:textSize="20sp"/>
	    <TextView
	       android:id="@+id/textView8"
	       android:text="Data Emissão"
	       android:layout_width="140dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="10dp"
	       android:textSize="20sp"/>
	   <EditText
	       android:id="@+id/txtDataEmissao"
	       android:layout_width="160dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="10dp"
	       android:background="@layout/border"
	       android:inputType="date"
	       android:lines="1"
	       android:singleLine="true"
	       android:textSize="20sp"/>
	   <TextView
	       android:id="@+id/textView6"
	       android:text="Chave Acesso"
	       android:layout_width="135dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="110dp"
	       android:layout_marginLeft="-880dp"
	       android:textSize="20sp"/>
	   <EditText
	       android:id="@+id/txtChaveAcesso"
	       android:layout_width="600dp"
	       android:layout_height="40dp"
	       android:layout_marginTop="110dp"
	       android:layout_marginLeft="5dp"
	       android:background="@layout/border"
	       android:inputType="numberDecimal"
	       android:lines="1"
	       android:singleLine="true"
	       android:textSize="20sp"
	       android:hint="Chave Acesso"/>


        
        <ListView
            android:id="@+id/listaProd"
            android:layout_height="320dip"
            android:layout_width="740dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="-740dp"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:background="@layout/border"
            android:textSize="20sp"/>
        <Button 
            android:id="@+id/botaoInserir"
            android:text="Inserir"
            android:textSize="25sp"
            android:layout_width="130dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="180dp"
	        android:layout_marginLeft="15dp"/>
        <Button 
            android:id="@+id/botaoPesquisar"
            android:text="Pesquisar"
            android:textSize="25sp"
            android:layout_width="140dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="180dp"
	        android:layout_marginLeft="15dp"/>
        <Button 
            android:id="@+id/botaoEditar"
            android:text="Editar"
            android:textSize="25sp"
            android:layout_width="130dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="240dp"
	        android:layout_marginLeft="-287dp"/>
        <Button 
            android:id="@+id/botaoRemover"
            android:text="Remover"
            android:textSize="25sp"
            android:layout_width="130dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="300dp"
	        android:layout_marginLeft="-130dp"/>

        <Button
            android:id="@+id/botaoGravar"
            android:layout_width="130dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="450dp"
	        android:layout_marginLeft="-130dp"
            android:text="Gravar"
            android:textSize="25sp" />
        <Button
            android:id="@+id/botaoLimpar"
            android:layout_width="120dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="450dp"
	        android:layout_marginLeft="30dp"
            android:text="Limpar"
            android:textSize="25sp" />
	   

</LinearLayout>